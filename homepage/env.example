# =============================================================================
# HOMEPAGE ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Replace with your actual domain name
DOMAIN=yourdomain.com

# =============================================================================
# WEATHER API CONFIGURATION
# =============================================================================
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key
WEATHER_LAT=40.7128
WEATHER_LON=-74.0060
WEATHER_UNITS=metric

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Timezone (use your local timezone)
TZ=America/New_York
# User and group IDs for file permissions
PUID=1000
PGID=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Admin credentials for Homepage
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=info

# =============================================================================
# SERVICE API KEYS
# =============================================================================
# Add your service API keys here
TRAEFIK_API_KEY=your_traefik_api_key
AUTHENTIK_API_KEY=your_authentik_api_key
PORTAINER_API_KEY=your_portainer_api_key
GRAFANA_API_KEY=your_grafana_api_key
PROMETHEUS_API_KEY=your_prometheus_api_key
JELLYFIN_API_KEY=your_jellyfin_api_key
SONARR_API_KEY=your_sonarr_api_key
RADARR_API_KEY=your_radarr_api_key
LIDARR_API_KEY=your_lidarr_api_key
READARR_API_KEY=your_readarr_api_key
PROWLARR_API_KEY=your_prowlarr_api_key
BAZARR_API_KEY=your_bazarr_api_key
TAUTULLI_API_KEY=your_tautulli_api_key
OVERSEERR_API_KEY=your_overseerr_api_key
NEXTCLOUD_API_KEY=your_nextcloud_api_key
VAULTWARDEN_API_KEY=your_vaultwarden_api_key
PAPERLESS_API_KEY=your_paperless_api_key
IMMICH_API_KEY=your_immich_api_key
GITHUB_API_KEY=your_github_api_key

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Slack webhook for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# BACKUP STORAGE CONFIGURATION
# =============================================================================
# S3 backup configuration
S3_BACKUP_BUCKET=homepage-backups
S3_BACKUP_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# FTP backup configuration
FTP_BACKUP_HOST=backup.yourdomain.com
FTP_BACKUP_USERNAME=backup_user
FTP_BACKUP_PASSWORD=backup_password
FTP_BACKUP_PATH=/homepage

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Traefik network name
TRAEFIK_NETWORK=traefik

# Internal network for services
INTERNAL_NETWORK=homepage_internal

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Resource limits
MEMORY_LIMIT=512M
CPU_LIMIT=0.5

# Cache configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log file configuration
LOG_FILE=./logs/homepage.log
LOG_MAX_SIZE=100
LOG_MAX_FILES=5
LOG_COMPRESS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode (set to true for development)
DEV_MODE=false

# Debug mode
DEBUG=false

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Custom CSS file
CUSTOM_CSS_FILE=./config/custom.css

# Custom JavaScript file
CUSTOM_JS_FILE=./config/custom.js

# Custom icons directory
CUSTOM_ICONS_DIR=./config/icons

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Authentik SSO configuration
AUTHENTIK_CLIENT_ID=your_authentik_client_id
AUTHENTIK_CLIENT_SECRET=your_authentik_client_secret
AUTHENTIK_REDIRECT_URI=https://homepage.yourdomain.com/auth/callback

# Grafana integration
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your_grafana_api_key

# Prometheus integration
PROMETHEUS_URL=http://prometheus:9090

# Loki integration
LOKI_URL=http://loki:3100

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Alert thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90
TEMPERATURE_THRESHOLD=70

# Alert channels
ALERT_EMAIL=admin@yourdomain.com
ALERT_DISCORD_CHANNEL=#alerts
ALERT_SLACK_CHANNEL=#homelab-alerts

# =============================================================================
# MAINTENANCE CONFIGURATION
# =============================================================================
# Maintenance window (cron format)
MAINTENANCE_SCHEDULE="0 2 * * *"

# Auto-update configuration
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_SCHEDULE="0 3 * * 0"

# Health check configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3 