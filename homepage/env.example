# =============================================================================
# HOMELAB HOMEPAGE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and configure your settings

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Domain configuration
DOMAIN=homelab.local

# Port configuration
HOMEPAGE_PORT=3000

# Timezone (auto-detected if not set)
TIMEZONE=UTC

# User/Group IDs for Docker
PUID=1000
PGID=1000

# =============================================================================
# WEATHER CONFIGURATION
# =============================================================================

# OpenWeatherMap API Key
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Weather location
WEATHER_LAT=40.7128
WEATHER_LON=-74.0060
WEATHER_UNITS=metric

# =============================================================================
# API KEYS FOR SERVICES
# =============================================================================

# Infrastructure Services
TRAEFIK_API_KEY=your_traefik_api_key_here
AUTHENTIK_API_KEY=your_authentik_api_key_here
PORTAINER_API_KEY=your_portainer_api_key_here

# Monitoring Services
GRAFANA_API_KEY=your_grafana_api_key_here
UPTIMEKUMA_API_KEY=your_uptimekuma_api_key_here

# Media Services
JELLYFIN_API_KEY=your_jellyfin_api_key_here
SONARR_API_KEY=your_sonarr_api_key_here
RADARR_API_KEY=your_radarr_api_key_here
LIDARR_API_KEY=your_lidarr_api_key_here
READARR_API_KEY=your_readarr_api_key_here
PROWLARR_API_KEY=your_prowlarr_api_key_here
BAZARR_API_KEY=your_bazarr_api_key_here
TAUTULLI_API_KEY=your_tautulli_api_key_here
OVERSEERR_API_KEY=your_overseerr_api_key_here
SABNZBD_API_KEY=your_sabnzbd_api_key_here
IMMICH_API_KEY=your_immich_api_key_here

# Storage Services
NEXTCLOUD_API_KEY=your_nextcloud_api_key_here
PAPERLESS_API_KEY=your_paperless_api_key_here

# Automation Services
HOMEASSISTANT_API_KEY=your_homeassistant_api_key_here

# External Services
GITHUB_API_KEY=your_github_api_key_here

# =============================================================================
# GOOGLE CALENDAR INTEGRATION
# =============================================================================

# Google Calendar API credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes API token
KUBERNETES_TOKEN=your_kubernetes_token_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for API key storage (auto-generated if not set)
ENCRYPTION_KEY=

# Log level for debugging
LOG_LEVEL=INFO

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup encryption key (auto-generated if not set)
BACKUP_ENCRYPTION_KEY=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60

# Service timeout (seconds)
SERVICE_TIMEOUT=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Memory limit for containers
MEMORY_LIMIT=512M

# CPU limit for containers
CPU_LIMIT=0.5

# =============================================================================
# NETWORKING CONFIGURATION
# =============================================================================

# Traefik network name
TRAEFIK_NETWORK=traefik

# Internal service communication
INTERNAL_DOMAIN=internal.local

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log file path
LOG_FILE=homepage.log

# Log rotation
LOG_ROTATION_SIZE=10M
LOG_ROTATION_COUNT=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode (set to true for development)
DEV_MODE=false

# Debug mode
DEBUG=false

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom CSS file path
CUSTOM_CSS_PATH=./config/custom.css

# Custom icons path
CUSTOM_ICONS_PATH=./config/icons

# Background image URL
BACKGROUND_IMAGE_URL=https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Discord webhook URL
DISCORD_WEBHOOK_URL=

# Slack webhook URL
SLACK_WEBHOOK_URL=

# Email configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_TO= 