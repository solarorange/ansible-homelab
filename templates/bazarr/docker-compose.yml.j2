version: '3.8'

services:
  bazarr:
    image: linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID={{ ansible_user_id }}
      - PGID={{ ansible_user_gid }}
      - TZ={{ timezone | default('UTC') }}
      - DOCKER_MODS=linuxserver/mods:universal-cron
    volumes:
      - {{ docker_root }}/bazarr/config:/config
      - {{ docker_root }}/bazarr/data:/data
      - {{ media_dir }}/movies:/movies
      - {{ media_dir }}/tv:/tv
      - {{ media_dir }}/anime:/anime
    ports:
      - "6767:6767"
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.bazarr.rule=Host(`bazarr.{{ domain }}`)"
      - "traefik.http.routers.bazarr.entrypoints=websecure"
      - "traefik.http.routers.bazarr.tls=true"
      - "traefik.http.routers.bazarr.tls.certresolver=cloudflare"
      - "traefik.http.services.bazarr.loadbalancer.server.port=6767"
      - "traefik.http.middlewares.bazarr-auth.forwardauth.address=http://authentik:9000/outpost.goauthentik.io/auth/traefik"
      - "traefik.http.middlewares.bazarr-auth.forwardauth.trustForwardHeader=true"
      - "traefik.http.routers.bazarr.middlewares=bazarr-auth"
      - "traefik.http.middlewares.bazarr-headers.headers.customrequestheaders.X-Forwarded-Proto=https"
      - "traefik.http.middlewares.bazarr-headers.headers.customrequestheaders.X-Forwarded-Host=bazarr.{{ domain }}"
      - "traefik.http.routers.bazarr.middlewares=bazarr-headers"
      # Loki/Promtail scraping labels
      - "logging=promtail"
      - "promtail-job=media"
      - "promtail-service=bazarr"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:6767/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

networks:
  traefik_network:
    external: true 