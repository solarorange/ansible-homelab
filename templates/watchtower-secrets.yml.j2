# Watchtower Stack Secrets Configuration
# This file should be encrypted with Ansible Vault
# Use: ansible-vault encrypt templates/watchtower-secrets.yml.j2

# Database Secrets
database_secrets:
  authentik_postgres_password: "{{ authentik_postgres_password }}"
  authentik_redis_password: "{{ vault_redis_password }}"
  influxdb_admin_password: "{{ influxdb_admin_password }}"
  influxdb_token: "{{ influxdb_token }}"

# Application Secrets
application_secrets:
  authentik_secret_key: "{{ authentik_secret_key }}"
  grafana_admin_password: "{{ grafana_admin_password }}"
  grafana_secret_key: "{{ grafana_secret_key }}"
  vault_root_token: "{{ vault_root_token }}"
  vault_unseal_key: "{{ vault_unseal_key }}"

# API Keys and Tokens
api_keys:
  cloudflare_api_key: "{{ cloudflare_api_key }}"
  telegram_bot_token: "{{ telegram_bot_token | default('') }}"
  telegram_chat_id: "{{ telegram_chat_id | default('') }}"

# Service-specific Secrets
service_secrets:
  jellyfin_api_key: "{{ jellyfin_api_key | default('') }}"
  sonarr_api_key: "{{ sonarr_api_key | default('') }}"
  radarr_api_key: "{{ radarr_api_key | default('') }}"
  pihole_web_password: "{{ pihole_web_password }}"

# Network and Security
network_secrets:
  wireguard_private_key: "{{ wireguard_private_key | default('') }}"
  wireguard_public_key: "{{ wireguard_public_key | default('') }}"
  ssh_private_key: "{{ ssh_private_key | default('') }}"

# Backup and Recovery
backup_secrets:
  backup_encryption_key: "{{ backup_encryption_key | default('') }}"
  cloud_storage_access_key: "{{ cloud_storage_access_key | default('') }}"
  cloud_storage_secret_key: "{{ cloud_storage_secret_key | default('') }}" 