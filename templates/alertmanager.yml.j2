global:
  resolve_timeout: 5m
  smtp_smarthost: '{{ smtp_host | default("smtp.gmail.com") }}:{{ smtp_port | default(587) }}'
  smtp_from: '{{ monitoring_email }}'
  smtp_auth_username: '{{ smtp_username }}'
  # SECURITY: Avoid inline SMTP password. Prefer secret file env (e.g., SMTP_PASSWORD__FILE)
  smtp_auth_password: '{{ smtp_password }}'
  smtp_require_tls: true

route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'email-notifications'
  routes:
    - match:
        severity: critical
      receiver: 'critical-notifications'
      continue: true
    - match:
        severity: warning
      receiver: 'warning-notifications'
      continue: true

receivers:
  - name: 'email-notifications'
    email_configs:
      - to: '{{ admin_email }}'
        send_resolved: true
        headers:
          subject: '{{ template "email.subject" . }}'
        html: '{{ template "email.html" . }}'

  - name: 'critical-notifications'
    email_configs:
      - to: '{{ admin_email }}'
        send_resolved: true
        headers:
          subject: '[CRITICAL] {{ template "email.subject" . }}'
        html: '{{ template "email.html" . }}'
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel | default("#alerts") }}'
        send_resolved: true
        title: '{{ template "slack.title" . }}'
        text: '{{ template "slack.text" . }}'
        actions:
          - type: button
            text: 'View Dashboard'
            url: '{{ .ExternalURL }}'

  - name: 'warning-notifications'
    email_configs:
      - to: '{{ admin_email }}'
        send_resolved: true
        headers:
          subject: '[WARNING] {{ template "email.subject" . }}'
        html: '{{ template "email.html" . }}'
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel | default("#alerts") }}'
        send_resolved: true
        title: '{{ template "slack.title" . }}'
        text: '{{ template "slack.text" . }}'

templates:
  - '/etc/alertmanager/templates/*.tmpl' 