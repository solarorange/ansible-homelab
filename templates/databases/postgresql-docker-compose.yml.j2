version: '3.8'

networks:
  homelab:
    name: homelab
    external: true
  monitoring:
    name: monitoring
    external: true

services:
  postgresql:
    image: postgres:15-alpine
    container_name: postgresql
    restart: unless-stopped
    environment:
      - POSTGRES_DB=homelab
      - POSTGRES_USER={{ vault_postgresql_user | default('homelab') }}
      - POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
      - POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
      - PGDATA=/var/lib/postgresql/data/pgdata
    volumes:
      - "{{ data_dir }}/postgresql:/var/lib/postgresql/data"
      - "{{ config_dir }}/postgresql/init:/docker-entrypoint-initdb.d"
      - "{{ config_dir }}/postgresql/conf:/etc/postgresql/postgresql.conf"
      - "{{ logs_dir }}/postgresql:/var/log/postgresql"
      - "{{ docker_dir }}/postgresql/secrets:/run/secrets:ro"
    # No host port exposure; internal network access only
    # ports:
    #   - "5432:5432"
    networks:
      - homelab
      - monitoring
    labels:
      - "traefik.enable=false"
      - "prometheus.enable=true"
      - "prometheus.job=postgresql"
      - "prometheus.port=5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ vault_postgresql_user | default('homelab') }} -d homelab"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    security_opt:
      - no-new-privileges:true
    read_only: false
    tmpfs:
      - /tmp
      - /var/run/postgresql
    ulimits:
      nproc: 65536
      nofile:
        soft: 26677
        hard: 46677
    # Resource controls for Docker Engine
    mem_limit: 1g
    cpus: '1.0'

  postgresql-exporter:
    image: prometheuscommunity/postgres-exporter:latest
    container_name: postgresql_exporter
    restart: unless-stopped
    environment:
      - DATA_SOURCE_NAME=postgresql://{{ vault_postgresql_user | default('homelab') }}:{{ vault_postgresql_password }}@postgresql:5432/homelab?sslmode=disable
    # No host port exposure; metrics scraped internally
    # ports:
    #   - "9187:9187"
    networks:
      - monitoring
    labels:
      - "traefik.enable=false"
      - "prometheus.enable=true"
      - "prometheus.job=postgresql_exporter"
      - "prometheus.port=9187"
    volumes:
      - "{{ config_dir }}/postgresql:/etc/postgresql"
      - "{{ docker_dir }}/postgresql/secrets:/run/secrets:ro"
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://127.0.0.1:9187/metrics || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    depends_on:
      postgresql:
        condition: service_healthy
    security_opt:
      - no-new-privileges:true
    mem_limit: 128m
    cpus: '0.1'