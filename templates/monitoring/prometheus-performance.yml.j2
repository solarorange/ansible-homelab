global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "{{ docker_dir }}/monitoring/performance/alerts.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9090']

  # Node Exporter
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']

  # Docker containers
  - job_name: 'docker'
    static_configs:
      - targets: ['cadvisor:8080']

  # Traefik
  - job_name: 'traefik'
    static_configs:
      - targets: ['traefik:8080']

  # Grafana
  - job_name: 'grafana'
    static_configs:
      - targets: ['grafana:3000']

  # InfluxDB
  - job_name: 'influxdb'
    static_configs:
      - targets: ['influxdb:8086']

  # PostgreSQL
  - job_name: 'postgresql'
    static_configs:
      - targets: ['postgresql-exporter:9187']

  # Redis
  - job_name: 'redis'
    static_configs:
      - targets: ['redis-exporter:9121']

  # Media services
  - job_name: 'media-services'
    static_configs:
      - targets:
        - 'sonarr:8989'
        - 'radarr:7878'
        - 'jellyfin:8096'
        - 'plex:32400'

  # Security services
  - job_name: 'security-services'
    static_configs:
      - targets:
        - 'authentik:9000'
        - 'crowdsec:6060'

  # Storage services
  - job_name: 'storage-services'
    static_configs:
      - targets:
        - 'nextcloud:8080'
        - 'samba:139'

  # Custom metrics
  - job_name: 'custom-metrics'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9091']
    metrics_path: '/metrics'
    scrape_interval: 30s 