# Watchtower Stack Secrets Configuration
# This file should be encrypted with Ansible Vault
# Use: ansible-vault encrypt templates/watchtower-secrets.yml.j2

# Database Secrets
database_secrets:
  authentik_postgres_password: "{{ vault_authentik_postgres_password }}"
  authentik_redis_password: "{{ vault_redis_password }}"
  influxdb_admin_password: "{{ vault_influxdb_admin_password }}"
  influxdb_token: "{{ vault_influxdb_token }}"

# Application Secrets
application_secrets:
  authentik_secret_key: "{{ vault_authentik_secret_key }}"
  grafana_admin_password: "{{ vault_grafana_admin_password }}"
  grafana_secret_key: "{{ vault_grafana_secret_key }}"
  vault_root_token: "{{ vault_vault_root_token }}"
  vault_unseal_key: "{{ vault_vault_unseal_key }}"

# API Keys and Tokens
api_keys:
  cloudflare_api_key: "{{ vault_cloudflare_api_token }}"
  telegram_bot_token: "{{ vault_telegram_bot_token | default('') }}"
  telegram_chat_id: "{{ vault_telegram_chat_id | default('') }}"

# Service-specific Secrets
service_secrets:
  jellyfin_api_key: "{{ vault_jellyfin_api_key | default('') }}"
  sonarr_api_key: "{{ vault_sonarr_api_key | default('') }}"
  radarr_api_key: "{{ vault_radarr_api_key | default('') }}"
  pihole_web_password: "{{ vault_pihole_web_password }}"

# Network and Security
network_secrets:
  wireguard_private_key: "{{ vault_wireguard_private_key | default('') }}"
  wireguard_public_key: "{{ vault_wireguard_public_key | default('') }}"
  ssh_private_key: "{{ vault_ssh_private_key | default('') }}"

# Backup and Recovery
backup_secrets:
  backup_encryption_key: "{{ vault_backup_encryption_key | default('') }}"
  cloud_storage_access_key: "{{ vault_cloud_storage_access_key | default('') }}"
  cloud_storage_secret_key: "{{ vault_cloud_storage_secret_key | default('') }}" 