{
  "dashboard": {
    "id": null,
    "title": "Network & Infrastructure",
    "tags": ["network", "infrastructure", "dns", "loadbalancer", "monitoring"],
    "style": "{{ grafana_dashboard_theme | default('dark') }}",
    "timezone": "{{ grafana_dashboard_timezone | default('UTC') }}",
    "refresh": "{{ grafana_dashboard_auto_refresh | default('30s') }}",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "network_interface",
          "type": "query",
          "query": "label_values(node_network_receive_bytes_total, device)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "label": "Network Interface"
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job=~\"traefik|nginx|haproxy\")",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "label": "Service"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Network Traffic",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Receive"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Transmit"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Network Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(node_network_receive_errs_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Receive Errors"
          },
          {
            "expr": "rate(node_network_transmit_errs_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Transmit Errors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 3,
        "title": "DNS Resolution",
        "type": "stat",
        "targets": [
          {
            "expr": "probe_success{job=\"dns_monitoring\"}",
            "legendFormat": "DNS Resolution"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "Load Balancer Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"$service\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "Network Traffic Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Receive"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Transmit"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Network Errors Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_errs_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Receive Errors"
          },
          {
            "expr": "rate(node_network_transmit_errs_total{device=~\"$network_interface\"}[5m])",
            "legendFormat": "{{device}} - Transmit Errors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "title": "HTTP Status Codes",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(traefik_service_requests_total{code=~\"2..\"}[5m])",
            "legendFormat": "2xx - {{service}}"
          },
          {
            "expr": "rate(traefik_service_requests_total{code=~\"3..\"}[5m])",
            "legendFormat": "3xx - {{service}}"
          },
          {
            "expr": "rate(traefik_service_requests_total{code=~\"4..\"}[5m])",
            "legendFormat": "4xx - {{service}}"
          },
          {
            "expr": "rate(traefik_service_requests_total{code=~\"5..\"}[5m])",
            "legendFormat": "5xx - {{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 8,
        "title": "Load Balancer Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "traefik_service_server_up",
            "legendFormat": "Server Up - {{service}}"
          },
          {
            "expr": "traefik_service_server_connections",
            "legendFormat": "Active Connections - {{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "title": "DNS Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "probe_duration_seconds{job=\"dns_monitoring\"}",
            "legendFormat": "DNS Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "s",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 10,
        "title": "Network Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "probe_duration_seconds{job=\"ping_monitoring\"}",
            "legendFormat": "Ping Latency - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "ms",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 11,
        "title": "Network Interfaces Status",
        "type": "table",
        "targets": [
          {
            "expr": "node_network_up{device=~\"$network_interface\"}",
            "legendFormat": "{{device}}",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "custom": {
              "displayMode": "color-background"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Interface"
            }
          ]
        }
      },
      {
        "id": 12,
        "title": "Service Endpoints",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=~\"$service\"}",
            "legendFormat": "{{job}} - {{instance}}",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "custom": {
              "displayMode": "color-background"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Service"
            }
          ]
        }
      }
    ],
    "schemaVersion": 30,
    "version": 1
  },
  "folderTitle": "{{ grafana_dashboard_categories.network_infrastructure.folder | default('Network & Infrastructure') }}",
  "overwrite": true
} 