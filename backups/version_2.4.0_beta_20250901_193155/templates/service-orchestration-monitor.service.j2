[Unit]
Description=Service Orchestration Monitoring
After=network.target service-orchestrator.service
Requires=service-orchestrator.service

[Service]
Type=simple
ExecStart=/usr/local/bin/service_orchestration_monitor.sh
StandardOutput=append:/var/log/service_orchestration/monitor.log
StandardError=append:/var/log/service_orchestration/monitor.log

[Install]
WantedBy=multi-user.target 