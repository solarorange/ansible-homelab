# n8n Homepage Service Configuration
# Service configuration for n8n in Homepage dashboard

- name: n8n
  icon: n8n.png
  href: https://{{ n8n_subdomain }}.{{ domain }}
  description: {{ n8n_homepage_description | default('Workflow Automation & Integration Platform') }}
  category: {{ n8n_homepage_category | default('Automation') }}
  widget:
    type: n8n
    url: http://n8n-app:{{ n8n_port }}
    key: n8n_status
  status:
    enabled: true
    url: http://n8n-app:{{ n8n_port }}/healthz
    method: GET
    timeout: 10
    interval: 30
  auth:
    enabled: {{ 'true' if n8n_auth_method == 'authentik' else 'false' }}
    provider: authentik
    redirect: https://{{ n8n_subdomain }}.{{ domain }}
  metadata:
    version: latest
    repository: https://github.com/n8n-io/n8n
    documentation: https://docs.n8n.io/
    support: https://community.n8n.io/ 