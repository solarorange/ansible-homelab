# Linkwarden AlertManager Configuration
# Alert configuration for Linkwarden monitoring

receivers:
  - name: 'linkwarden-alerts'
    webhook_configs:
      - url: '{{ linkwarden_alerting_webhook | default("http://alertmanager:9093/api/v1/alerts") }}'
        send_resolved: true

route:
  group_by: ['alertname', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'linkwarden-alerts'

inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'service'] 