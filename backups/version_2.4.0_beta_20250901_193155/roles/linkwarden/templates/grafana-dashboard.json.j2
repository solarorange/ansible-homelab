{
  "dashboard": {
    "id": null,
    "title": "Linkwarden Dashboard",
    "tags": ["linkwarden", "bookmarks", "homelab"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Linkwarden Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"linkwarden\"}",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"linkwarden\"}[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum{job=\"linkwarden\"}[5m]) / rate(http_request_duration_seconds_count{job=\"linkwarden\"}[5m])",
            "legendFormat": "Average Response Time"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
} 