# DumbAssets Backup Configuration
# Generated by Ansible - Do not edit manually

backup:
  enabled: {{ dumbassets_backup_enabled }}
  schedule:
    daily: "0 2 * * *"
    weekly: "0 2 * * 0"
    monthly: "0 2 1 * *"
  
  retention:
    daily: {{ dumbassets_backup_retention_days }}
    weekly: 4
    monthly: 12
  
  compression: {{ dumbassets_backup_compression }}
  encryption: {{ dumbassets_backup_encryption }}
  
  paths:
    - "{{ dumbassets_data_dir }}"
    - "{{ dumbassets_config_dir }}"
  
  exclude:
    - "*.tmp"
    - "*.log"
    - "*.cache"
    - "node_modules"
  
  verification: true
  notification: true
  
  storage:
    local: "{{ dumbassets_backup_dir }}"
    remote: null  # Configure for remote backup if needed 