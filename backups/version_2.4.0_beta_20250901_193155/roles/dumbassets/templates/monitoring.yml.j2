# DumbAssets Prometheus Monitoring Configuration
# Generated by Ansible - Do not edit manually

- job_name: 'dumbassets'
  static_configs:
    - targets:
        - '{{ dumbassets_container_name }}:{{ dumbassets_port }}'
      labels:
        service: 'dumbassets'
        instance: '{{ ansible_hostname }}'
        environment: 'production'
        app: 'asset-tracking'
  
  metrics_path: '/metrics'
  scrape_interval: 30s
  scrape_timeout: 10s
  
  # Health check endpoint
  - job_name: 'dumbassets-health'
    static_configs:
      - targets:
          - '{{ dumbassets_container_name }}:{{ dumbassets_port }}'
        labels:
          service: 'dumbassets-health'
          instance: '{{ ansible_hostname }}'
          environment: 'production'
          app: 'asset-tracking'
    
    metrics_path: '/health'
    scrape_interval: 60s
    scrape_timeout: 15s 