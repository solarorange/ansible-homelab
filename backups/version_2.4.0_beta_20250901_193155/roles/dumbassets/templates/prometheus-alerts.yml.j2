# DumbAssets Prometheus Alerting Rules
# Generated by Ansible - Do not edit manually

groups:
  - name: dumbassets
    rules:
      # Service Down Alert
      - alert: DumbAssetsDown
        expr: up{job="dumbassets"} == 0
        for: 1m
        labels:
          severity: critical
          service: dumbassets
        annotations:
          summary: "DumbAssets service is down"
          description: "DumbAssets service has been down for more than 1 minute"
          url: "https://{{ dumbassets_subdomain }}.{{ domain }}"

      # High Memory Usage
      - alert: DumbAssetsHighMemoryUsage
        expr: container_memory_usage_bytes{container="dumbassets"} / container_spec_memory_limit_bytes{container="dumbassets"} > 0.8
        for: 5m
        labels:
          severity: warning
          service: dumbassets
        annotations:
          summary: "DumbAssets high memory usage"
          description: "DumbAssets is using more than 80% of allocated memory"
          url: "https://{{ dumbassets_subdomain }}.{{ domain }}"

      # High CPU Usage
      - alert: DumbAssetsHighCPUUsage
        expr: rate(container_cpu_usage_seconds_total{container="dumbassets"}[5m]) > 0.8
        for: 5m
        labels:
          severity: warning
          service: dumbassets
        annotations:
          summary: "DumbAssets high CPU usage"
          description: "DumbAssets is using more than 80% CPU"
          url: "https://{{ dumbassets_subdomain }}.{{ domain }}"

      # Disk Space Low
      - alert: DumbAssetsLowDiskSpace
        expr: (node_filesystem_avail_bytes{mountpoint="{{ dumbassets_data_dir }}"} / node_filesystem_size_bytes{mountpoint="{{ dumbassets_data_dir }}"}) < 0.1
        for: 5m
        labels:
          severity: critical
          service: dumbassets
        annotations:
          summary: "DumbAssets low disk space"
          description: "DumbAssets data directory has less than 10% free space"
          url: "https://{{ dumbassets_subdomain }}.{{ domain }}"

      # Backup Failure
      - alert: DumbAssetsBackupFailure
        expr: dumbassets_backup_last_success_timestamp_seconds < (time() - 86400)
        for: 1h
        labels:
          severity: warning
          service: dumbassets
        annotations:
          summary: "DumbAssets backup failure"
          description: "DumbAssets backup has not completed successfully in the last 24 hours"
          url: "https://{{ dumbassets_subdomain }}.{{ domain }}" 