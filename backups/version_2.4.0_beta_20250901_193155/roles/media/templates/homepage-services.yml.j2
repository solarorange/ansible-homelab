# Media Stack Homepage Services Configuration
# Generated by Ansible - Do not edit manually

- name: Media
  items:
    # Downloaders
    {% for name, service in media_downloaders is defined and media_downloaders %}
    {% if service.enabled | default(false) %}
    - name: {{ name | capitalize }}
      description: "Downloader"
      icon: "{{ name }}.png"
      href: "https://{{ service.subdomain }}.{{ domain }}"
      widget:
        type: "{{ name }}"
        url: "https://{{ service.subdomain }}.{{ domain }}"
    {% endif %}
    {% endfor %}

    # ARR Services
    {% for name, service in media_arr_services.items() %}
    {% if service.enabled | default(false) %}
    - name: {{ name | capitalize }}
      description: "ARR Service"
      icon: "{{ name }}.png"
      href: "https://{{ service.subdomain }}.{{ domain }}"
      widget:
        type: "{{ name }}"
        url: "https://{{ service.subdomain }}.{{ domain }}"
        key: "{{ service.api_key | default('') }}"
    {% endif %}
    {% endfor %}

    # Media Players
    {% for name, service in media_players.items() %}
    {% if service.enabled | default(false) %}
    - name: {{ name | capitalize }}
      description: "Media Player"
      icon: "{{ name }}.png"
      href: "https://{{ service.subdomain }}.{{ domain }}"
      widget:
        type: "{{ name }}"
        url: "https://{{ service.subdomain }}.{{ domain }}"
    {% endif %}
    {% endfor %} 