# =============================================================================
# HOMEPAGE ADVANCED SETTINGS CONFIGURATION
# =============================================================================

# =============================================================================
# DISPLAY SETTINGS
# =============================================================================
display:
  # Theme settings
  theme: dark
  colorScheme: auto  # auto, light, dark
  
  # Layout settings
  layout: default  # default, minimal, compact
  columns: 3  # Number of columns for service grid
  gap: 1rem  # Gap between service cards
  
  # Header settings
  headerStyle: gradient  # gradient, solid, minimal
  showDescription: true
  showLogo: true
  logoUrl: https://raw.githubusercontent.com/gethomepage/homepage/main/public/favicon.ico
  
  # Background settings
  background: https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop
  backgroundBlur: 0.5
  backgroundOpacity: 0.3
  backgroundPosition: center
  backgroundSize: cover

# =============================================================================
# WIDGET SETTINGS
# =============================================================================
widgets:
  # Weather widget settings
  weather:
    enabled: true
    provider: openweathermap  # openweathermap, weatherapi, accuweather
    apiKey: your_openweathermap_api_key
    latitude: 40.7128
    longitude: -74.0060
    units: metric  # metric, imperial
    updateInterval: 300  # seconds
    showForecast: true
    showHumidity: true
    showWind: true
    showPressure: true
    
  # System monitoring widget settings
  system:
    enabled: true
    showCpu: true
    showMemory: true
    showDisk: true
    showNetwork: true
    showTemperature: true
    updateInterval: 30  # seconds
    thresholds:
      cpu: 80  # percentage
      memory: 85  # percentage
      disk: 90  # percentage
      temperature: 70  # celsius
    
  # Search widget settings
  search:
    enabled: true
    provider: duckduckgo  # duckduckgo, google, bing
    target: _blank
    placeholder: "Search the web..."
    showSuggestions: true
    
  # Docker widget settings
  docker:
    enabled: true
    socket: /var/run/docker.sock
    showStats: true
    showLogs: false
    maxLogLines: 100
    updateInterval: 30  # seconds
    
  # Kubernetes widget settings
  kubernetes:
    enabled: false
    config: ~/.kube/config
    context: default
    namespace: default
    showPods: true
    showServices: true
    showNodes: false

# =============================================================================
# SERVICE SETTINGS
# =============================================================================
services:
  # Service grouping
  grouping:
    enabled: true
    showGroupHeaders: true
    collapseGroups: false
    defaultExpanded: true
    
  # Service cards
  cards:
    showIcons: true
    showDescriptions: true
    showStatus: true
    showHealth: true
    showMetrics: true
    cardStyle: modern  # modern, minimal, classic
    hoverEffect: true
    animation: true
    
  # Health monitoring
  health:
    enabled: true
    checkInterval: 30  # seconds
    timeout: 10  # seconds
    retries: 3
    showLastCheck: true
    showResponseTime: true
    
  # Authentication
  auth:
    enabled: true
    type: api_key  # api_key, session, oauth
    header: Authorization
    timeout: 30  # seconds

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
notifications:
  # Email notifications
  email:
    enabled: false
    provider: smtp  # smtp, sendgrid, mailgun
    host: smtp.gmail.com
    port: 587
    username: your_email@gmail.com
    password: "{{ vault_smtp_password }}"
    from: your_email@gmail.com
    to: {{ admin_email | default("admin@" + domain) }}
    tls: true
    
  # Discord notifications
  discord:
    enabled: false
    webhook: https://discord.com/api/webhooks/your_webhook_url
    username: Homepage Bot
    avatar: https://raw.githubusercontent.com/gethomepage/homepage/main/public/favicon.ico
    
  # Slack notifications
  slack:
    enabled: false
    webhook: https://hooks.slack.com/services/your_webhook_url
    channel: #homelab
    username: Homepage Bot
    
  # Telegram notifications
  telegram:
    enabled: false
    botToken: your_bot_token
    chatId: your_chat_id
    
  # Notification triggers
  triggers:
    serviceDown: true
    serviceUp: true
    highResourceUsage: true
    backupComplete: true
    backupFailed: true
    securityAlert: true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
security:
  # Authentication
  auth:
    enabled: true
    type: basic  # basic, oauth, saml
    users:
      - username: admin
        password: "{{ vault_homepage_admin_password }}"
        role: admin
      - username: user
        password: "{{ vault_homepage_user_password }}"
        role: user
        
  # Access control
  access:
    allowExternalAccess: true
    allowedIPs: []  # Empty array allows all IPs
    requireHTTPS: true
    sessionTimeout: 3600  # seconds
    
  # API security
  api:
    enabled: true
    rateLimit: 100  # requests per minute
    apiKeyRequired: true
    cors:
      enabled: true
      allowedOrigins: ["https://yourdomain.com"]
      allowedMethods: ["GET", "POST", "PUT", "DELETE"]
      allowedHeaders: ["Content-Type", "Authorization"]

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
performance:
  # Caching
  cache:
    enabled: true
    type: memory  # memory, redis
    ttl: 300  # seconds
    maxSize: 100  # MB
    
  # Database
  database:
    type: sqlite  # sqlite, postgresql, mysql
    path: ./data/homepage.db
    backup:
      enabled: true
      interval: 86400  # seconds (24 hours)
      keepBackups: 7
      
  # Logging
  logging:
    level: info  # debug, info, warn, error
    format: json  # json, text
    output: file  # file, stdout, stderr
    file: ./logs/homepage.log
    maxSize: 100  # MB
    maxFiles: 5
    compress: true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
integrations:
  # Traefik integration
  traefik:
    enabled: true
    url: http://traefik:8080
    apiKey: your_traefik_api_key
    autoDiscover: true
    
  # Authentik integration
  authentik:
    enabled: true
    url: http://authentik:9000
    apiKey: your_authentik_api_key
    sso: true
    
  # Grafana integration
  grafana:
    enabled: true
    url: http://grafana:3000
    apiKey: your_grafana_api_key
    dashboards: true
    alerts: true
    
  # Prometheus integration
  prometheus:
    enabled: true
    url: http://prometheus:9090
    metrics: true
    alerts: true

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
backup:
  # Automatic backups
  auto:
    enabled: true
    schedule: "0 2 * * *"  # Daily at 2 AM
    retention: 30  # days
    compress: true
    
  # Backup locations
  locations:
    - type: local
      path: ./backups
    - type: s3
      bucket: homepage-backups
      region: us-east-1
      accessKey: your_access_key
      secretKey: "{{ vault_homepage_secret_key }}"
    - type: ftp
      host: backup.yourdomain.com
      username: backup_user
      password: backup_password
      path: /homepage

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
monitoring:
  # Health checks
  health:
    enabled: true
    endpoint: /health
    interval: 30  # seconds
    
  # Metrics
  metrics:
    enabled: true
    endpoint: /metrics
    format: prometheus  # prometheus, json
    
  # Alerts
  alerts:
    enabled: true
    channels:
      - email
      - discord
      - slack
    rules:
      - name: High CPU Usage
        condition: cpu > 80
        duration: 5m
      - name: High Memory Usage
        condition: memory > 85
        duration: 5m
      - name: Service Down
        condition: service_status == "down"
        duration: 1m

# =============================================================================
# CUSTOMIZATION SETTINGS
# =============================================================================
customization:
  # Custom CSS
  css:
    enabled: true
    file: ./config/custom.css
    
  # Custom JavaScript
  javascript:
    enabled: true
    file: ./config/custom.js
    
  # Custom icons
  icons:
    enabled: true
    directory: ./config/icons
    defaultProvider: https://raw.githubusercontent.com/gethomepage/homepage/main/public/icons
    
  # Custom themes
  themes:
    enabled: true
    directory: ./config/themes
    default: dark 