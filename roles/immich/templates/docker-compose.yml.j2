      - {{ dependency }}
      {% endfor %}
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    read_only: false
    tmpfs:
      - /tmp
    user: "{{ PUID | default(1000) }}:{{ PGID | default(1000) }}"
    mem_limit: {{ immich_components.machine_learning.resources.limits.memory }}
    cpus: '{{ immich_components.machine_learning.resources.limits.cpus }}'
  {% endif %} 