version: '3.8'

networks:
  homelab:
    external: true

services:
  homarr:
    image: "{{ homarr_image }}"
    container_name: "{{ homarr_container_name }}"
    restart: "{{ homarr_restart_policy }}"
    user: "{{ homarr_user }}"
    read_only: {{ homarr_read_only | lower }}
    security_opt:
      - no-new-privileges:{{ homarr_no_new_privileges | lower }}
    cap_drop:
      - ALL
    volumes:
      - "{{ homarr_data_dir }}:/app/data"
      - "/etc/localtime:/etc/localtime:ro"
    environment:
{% for key, value in homarr_environment.items() %}
      - {{ key }}={{ value }}
{% endfor %}
    networks:
      - homelab
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.homarr.rule=Host(`{{ homarr_domain }}`)"
      - "traefik.http.routers.homarr.tls=true"
      - "traefik.http.routers.homarr.tls.certresolver=letsencrypt"
      - "traefik.http.services.homarr.loadbalancer.server.port={{ homarr_port }}"
      - "traefik.docker.network=homelab"
