# Fail2ban jail for automation services
[automation]
enabled = true
port = http,https
filter = automation
logpath = /var/log/traefik/access.log
maxretry = {{ automation_fail2ban_max_retry }}
bantime = {{ automation_fail2ban_bantime }}

