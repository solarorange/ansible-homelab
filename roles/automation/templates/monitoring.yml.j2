# Prometheus scrape configurations for the automation stack
scrape_configs:
  - job_name: 'homeassistant'
    static_configs:
      - targets: ['homeassistant:8123']
    metrics_path: /api/prometheus

  - job_name: 'nodered'
    static_configs:
      - targets: ['nodered:1880']
    metrics_path: /metrics 