# DumbAssets Webhook Notifications Configuration
# Generated by Ansible - Do not edit manually

webhook:
  enabled: {{ dumbassets_notifications_enabled }}
  url: "{{ dumbassets_apprise_url | regex_replace('.*webhook.*', 'webhook://') }}"
  method: "POST"
  headers:
    Content-Type: "application/json"
    User-Agent: "DumbAssets/1.0"
  
  notifications:
    - event: service_down
      payload:
        event: "service_down"
        service: "dumbassets"
        severity: "critical"
        timestamp: "{{ "{{" }} .StartsAt {{ "}}" }}"
        
    - event: service_up
      payload:
        event: "service_up"
        service: "dumbassets"
        severity: "info"
        timestamp: "{{ "{{" }} .StartsAt {{ "}}" }}"
        
    - event: backup_failure
      payload:
        event: "backup_failure"
        service: "dumbassets"
        severity: "warning"
        timestamp: "{{ "{{" }} .StartsAt {{ "}}" }}"
        
    - event: high_usage
      payload:
        event: "high_usage"
        service: "dumbassets"
        severity: "warning"
        timestamp: "{{ "{{" }} .StartsAt {{ "}}" }}" 