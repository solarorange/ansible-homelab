# DumbAssets Logrotate Configuration
# Generated by Ansible - Do not edit manually

{{ dumbassets_logs_dir }}/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 644 {{ username | default('homelab') }} {{ username | default('homelab') }}
    postrotate
        docker exec {{ dumbassets_container_name }} kill -HUP 1
    endscript
}

{{ dumbassets_backup_dir }}/logs/*.log {
    weekly
    missingok
    rotate 4
    compress
    delaycompress
    notifempty
    create 644 {{ username | default('homelab') }} {{ username | default('homelab') }}
} 