version: '3.8'

networks:
  homelab:
    name: homelab
    external: true

services:
  pihole:
    image: "{{ security_pihole.image }}"
    container_name: "{{ security_pihole.container_name }}"
    restart: unless-stopped
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "67:67/udp" # Only if you want to use Pi-hole's DHCP
      - "8053:80/tcp" # Port for the web interface
    environment:
      TZ: "{{ timezone }}"
      WEBPASSWORD: "{{ security_pihole.admin_password }}"
      # Other Pi-hole specific environment variables can go here
      # e.g., DNS1, DNS2
    volumes:
      - "{{ docker_dir }}/pihole/etc-pihole:/etc/pihole"
      - "{{ docker_dir }}/pihole/etc-dnsmasq.d:/etc/dnsmasq.d"
    cap_add:
      - NET_ADMIN # Required for Pi-hole to function properly
    networks:
      - homelab
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelab"
      - "traefik.http.routers.pihole.rule=Host(`{{ security_pihole.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.pihole.entrypoints=https"
      - "traefik.http.routers.pihole.tls=true"
      - "traefik.http.services.pihole.loadbalancer.server.port=80" 