version: '3.8'

services:
  pinchflat:
    image: {{ pinchflat_image }}
    container_name: {{ pinchflat_container_name }}
    restart: {{ pinchflat_restart_policy }}
    
    # Environment variables
    environment:
      {% for key, value in pinchflat_environment.items() %}
      {% if key is match('(PASSWORD|TOKEN|SECRET|KEY)') %}
      - {{ key }}_FILE=/run/secrets/{{ key }}
      {% else %}
      - {{ key }}={{ value }}
      {% endif %}
      {% endfor %}
    
    # Volumes
    volumes:
      {% for volume in pinchflat_volumes %}
      - {{ volume }}
      {% endfor %}
      - "{{ logs_dir }}/pinchflat:/logs"
      {% if pinchflat_manage_secret_files | default(true) %}
      {% for key, value in pinchflat_environment.items() %}
      {% if key is match('(PASSWORD|TOKEN|SECRET|KEY)') %}
      - "{{ docker_dir }}/pinchflat/secrets/{{ key }}:/run/secrets/{{ key }}:ro"
      {% endif %}
      {% endfor %}
      {% endif %}
    
    # Ports removed (Traefik provides ingress). Enable to expose directly.
    {% if pinchflat_direct_expose_enabled | default(false) %}
    ports:
      - "{{ pinchflat_external_port }}:{{ pinchflat_internal_port }}"
    {% endif %}
    
    # Networks
    networks:
      {% for network in pinchflat_networks %}
      - {{ network }}
      {% endfor %}
    
    # Labels for Traefik
    {% if pinchflat_traefik_enabled | default(true) %}
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelab"
      - "traefik.http.routers.pinchflat.rule=Host(`{{ pinchflat_domain }}`)"
      - "traefik.http.routers.pinchflat.entrypoints=https"
      - "traefik.http.routers.pinchflat.tls=true"
      - "traefik.http.routers.pinchflat.tls.certresolver=cloudflare"
      - "traefik.http.services.pinchflat.loadbalancer.server.port={{ pinchflat_internal_port }}"
      {% if pinchflat_traefik_middleware is defined %}
      - "traefik.http.routers.pinchflat.middlewares={{ pinchflat_traefik_middleware }}"
      {% endif %}
    {% endif %}
    
    # Health check
    {% if pinchflat_healthcheck_enabled | default(true) %}
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://127.0.0.1:{{ pinchflat_internal_port }}/ || exit 1"]
      interval: {{ pinchflat_healthcheck_interval }}
      timeout: {{ pinchflat_healthcheck_timeout }}
      retries: {{ pinchflat_healthcheck_retries }}
      start_period: {{ pinchflat_healthcheck_start_period }}
    {% endif %}
    
    # Security options
    {% if pinchflat_security_enabled | default(true) %}
    security_opt:
      - no-new-privileges:{{ pinchflat_no_new_privileges | default(true) }}
    cap_drop:
      - ALL
    {% endif %}
    
    # Read-only root filesystem
    read_only: {{ pinchflat_read_only | default(true) }}
    tmpfs:
      - /tmp
    user: "{{ puid | default(1000) }}:{{ pgid | default(1000) }}"
    
    # Resource limits
    mem_limit: {{ pinchflat_memory_limit }}
    cpus: '{{ pinchflat_cpu_limit }}'
    
    # Dependencies
    {% if pinchflat_dependencies is defined %}
    depends_on:
      {% for dependency in pinchflat_dependencies %}
      {{ dependency }}:
        condition: service_healthy
      {% endfor %}
    {% endif %}
    
    # Logging
    logging:
      driver: "json-file"
      options:
        max-size: "50m"
        max-file: "5"

networks:
  homelab:
    external: true
  default:
    driver: bridge
