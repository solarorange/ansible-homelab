{
  "Logging": {
    "LogLevel": {
      "Default": "{{ ersatztv_logging_level | default('Information') }}",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "{{ ersatztv_database_connection_string | default('Data Source=/config/ersatztv.db') }}"
  },
  "ErsatzTV": {
    "Database": {
      "Provider": "{{ ersatztv_database_provider | default('Sqlite') }}",
      "ConnectionString": "{{ ersatztv_database_connection_string | default('Data Source=/config/ersatztv.db') }}"
    },
    "Transcoding": {
      "Enabled": {{ ersatztv_transcoding_enabled | lower }},
      "Profile": "{{ ersatztv_transcoding_profile | default('H264') }}",
      "Threads": {{ ersatztv_transcoding_threads | default(2) }},
      "HardwareAcceleration": "{{ ersatztv_hardware_acceleration | default('none') }}"
    },
    "Streaming": {
      "Enabled": {{ ersatztv_streaming_enabled | lower }},
      "Profile": "{{ ersatztv_streaming_profile | default('H264') }}",
      "Threads": {{ ersatztv_streaming_threads | default(2) }}
    },
    "Channels": {
      "Enabled": {{ ersatztv_channels_enabled | lower }},
      "AutoStart": {{ ersatztv_channels_auto_start | lower }}
    },
    "Filler": {
      "Enabled": {{ ersatztv_filler_enabled | lower }},
      "Duration": {{ ersatztv_filler_duration | default(30) }}
    },
    "Subtitles": {
      "Enabled": {{ ersatztv_subtitles_enabled | lower }},
      "Language": "{{ ersatztv_subtitles_language | default('eng') }}"
    },
    "Music": {
      "Enabled": {{ ersatztv_music_enabled | lower }},
      "FadeDuration": {{ ersatztv_music_fade_duration | default(3) }}
    },
    "Cache": {
      "Enabled": {{ ersatztv_cache_enabled | lower }},
      "Size": {{ ersatztv_cache_size | default(1073741824) }}
    },
    "Network": {
      "Interface": "{{ ersatztv_network_interface | default('eth0') }}",
      "Timeout": {{ ersatztv_network_timeout | default(30) }}
    },
    "Performance": {
      "Mode": "{{ ersatztv_performance_mode | default('balanced') }}",
      "Threads": {{ ersatztv_performance_threads | default(4) }}
    },
    "Security": {
      "Enabled": {{ ersatztv_security_enabled | lower }},
      "ApiKey": "{{ ersatztv_security_api_key | default('') }}"
    },
    "Monitoring": {
      "Prometheus": {
        "Enabled": {{ ersatztv_prometheus_enabled | lower }},
        "Port": {{ ersatztv_prometheus_port | default(9090) }},
        "Path": "{{ ersatztv_prometheus_path | default('/metrics') }}"
      }
    },
    "Backup": {
      "Enabled": {{ ersatztv_backup_enabled | lower }},
      "Retention": {{ ersatztv_backup_retention | default(7) }}
    }
  }
} 