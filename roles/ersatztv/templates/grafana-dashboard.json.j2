{
  "dashboard": {
    "id": null,
    "title": "ErsatzTV Dashboard",
    "tags": ["ersatztv", "media", "streaming"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ErsatzTV Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ersatztv_up",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Streams",
        "type": "stat",
        "targets": [
          {
            "expr": "ersatztv_active_streams",
            "legendFormat": "Active Streams"
          }
        ]
      },
      {
        "id": 3,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ersatztv_cpu_usage[5m])",
            "legendFormat": "CPU Usage"
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "ersatztv_memory_usage",
            "legendFormat": "Memory Usage"
          }
        ]
      },
      {
        "id": 5,
        "title": "Transcoding Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "ersatztv_transcoding_fps",
            "legendFormat": "Transcoding FPS"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
} 