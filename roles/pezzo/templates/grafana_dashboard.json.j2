{
  "dashboard": {
    "id": null,
    "title": "Pezzo - AI Prompt Management",
    "tags": ["pezzo", "ai", "prompt-management"],
    "style": "dark",
    "timezone": "{{ timezone }}",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Pezzo Server Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"pezzo-server\"}",
            "legendFormat": "Server Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Pezzo Console Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"pezzo-console\"}",
            "legendFormat": "Console Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Database Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"pezzo-postgres\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{job=\"pezzo-redis\"}",
            "legendFormat": "Redis"
          },
          {
            "expr": "up{job=\"pezzo-clickhouse\"}",
            "legendFormat": "ClickHouse"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ]
  }
