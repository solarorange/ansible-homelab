server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: {{ loki_url | default('http://loki:3100/loki/api/v1/push') }}

scrape_configs:
  - job_name: media-stack-logs
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 5s
    relabel_configs:
      - source_labels: ['__meta_docker_container_label_media_loki_scrape']
        action: keep
        regex: true
      - source_labels: ['__meta_docker_container_name']
        target_label: 'container'
        regex: '/?(.*)'
      - source_labels: ['__meta_docker_container_label_traefik_http_routers_.*_rule']
        target_label: 'hostname'
        regex: 'Host\\(`(.*)`\\)'
      - source_labels: ['__meta_docker_container_log_stream']
        target_label: 'logstream' 