#!/bin/bash
# Media stack metrics collection script
PUSH_URL="{{ metrics_push_url | default('http://localhost:9091/metrics/job/media-stack') }}"
declare -A services=(
{% for service in media_services %}
  [{{ service.name }}]="{{ service.metrics_url }}"
{% endfor %}
)
for name in "${!services[@]}"; do
  url="${services[$name]}"
  metrics=$(curl -s "$url")
  curl -s --data-binary "$metrics" "$PUSH_URL/$name"
done 