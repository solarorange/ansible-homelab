# Gluetun Environment Configuration
# Generated by Ansible - Do not edit manually

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Service Configuration
GLUETUN_ENABLED={{ gluetun_enabled | lower }}
GLUETUN_VERSION={{ gluetun_version }}
GLUETUN_PORT={{ gluetun_port }}

# Domain Configuration
GLUETUN_DOMAIN={{ gluetun_domain }}
GLUETUN_SUBDOMAIN={{ gluetun_subdomain }}

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

GLUETUN_AUTH_ENABLED={{ gluetun_auth_enabled | lower }}
GLUETUN_AUTH_METHOD={{ gluetun_auth_method }}
GLUETUN_ADMIN_EMAIL={{ gluetun_admin_email }}
GLUETUN_ADMIN_PASSWORD_FILE=/run/secrets/GLUETUN_ADMIN_PASSWORD
GLUETUN_SECRET_KEY_FILE=/run/secrets/GLUETUN_SECRET_KEY

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

GLUETUN_DATABASE_ENABLED={{ gluetun_database_enabled | lower }}
GLUETUN_DATABASE_TYPE={{ gluetun_database_type }}
{% if gluetun_database_type == "postgresql" %}
GLUETUN_DATABASE_HOST={{ gluetun_database_host }}
GLUETUN_DATABASE_PORT={{ gluetun_database_port }}
GLUETUN_DATABASE_NAME={{ gluetun_database_name }}
GLUETUN_DATABASE_USER={{ gluetun_database_user }}
GLUETUN_DATABASE_PASSWORD_FILE=/run/secrets/GLUETUN_DATABASE_PASSWORD
{% endif %}

# =============================================================================
