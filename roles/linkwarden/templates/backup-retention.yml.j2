# Linkwarden Backup Retention Configuration
# Retention policy configuration for backups

retention:
  policy: "daily"
  keep_daily: {{ linkwarden_backup_retention_days | default(7) }}
  keep_weekly: 4
  keep_monthly: 12
  compression: {{ linkwarden_backup_compression | default(true) | lower }}
  encryption: false
  storage:
    type: "local"
    path: "{{ linkwarden_backup_dir }}"
    max_size: "10GB" 