{
  "dashboard": {
    "id": null,
    "title": "Backup & Storage",
    "tags": ["backup", "storage", "disk", "health", "capacity", "backup-jobs"],
    "style": "{{ grafana_dashboard_theme | default('dark') }}",
    "timezone": "{{ grafana_dashboard_timezone | default('UTC') }}",
    "refresh": "{{ grafana_dashboard_auto_refresh | default('60s') }}",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"],
      "hidden": false,
      "collapse": false
    },
    "templating": {
      "list": [
        {
          "name": "storage_device",
          "type": "query",
          "query": "label_values(node_filesystem_size_bytes, device)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "label": "Storage Device",
          "description": "Select storage devices to monitor",
          "regex": "",
          "sort": 1
        },
        {
          "name": "backup_job",
          "type": "custom",
          "query": "system,media,database,config,documents,photos",
          "includeAll": true,
          "multi": true,
          "label": "Backup Job",
          "description": "Select backup jobs to monitor",
          "regex": "",
          "sort": 1
        },
        {
          "name": "storage_type",
          "type": "custom",
          "query": "ssd,hdd,nas,cloud,backup",
          "includeAll": true,
          "multi": true,
          "label": "Storage Type",
          "description": "Filter by storage type",
          "regex": "",
          "sort": 1
        },
        {
          "name": "mountpoint",
          "type": "query",
          "query": "label_values(node_filesystem_size_bytes, mountpoint)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "label": "Mount Point",
          "description": "Select mount points to monitor",
          "regex": "",
          "sort": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Backup Jobs",
          "datasource": "Prometheus",
          "expr": "backup_job_status",
          "iconColor": "rgba(0, 255, 0, 1)",
          "titleFormat": "Backup: {{ $labels.job }}",
          "textFormat": "Backup job {{ $labels.job }} completed with status {{ $value }}",
          "fillColor": "rgba(0, 255, 0, 0.1)",
          "lineColor": "rgba(0, 255, 0, 1)"
        },
        {
          "name": "Backup Failures",
          "datasource": "Prometheus",
          "expr": "backup_job_status == 0",
          "iconColor": "rgba(255, 0, 0, 1)",
          "titleFormat": "Backup Failed: {{ $labels.job }}",
          "textFormat": "Backup job {{ $labels.job }} failed",
          "fillColor": "rgba(255, 0, 0, 0.1)",
          "lineColor": "rgba(255, 0, 0, 1)"
        },
        {
          "name": "High Disk Usage",
          "datasource": "Prometheus",
          "expr": "(node_filesystem_size_bytes - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100 > 90",
          "iconColor": "rgba(255, 165, 0, 1)",
          "titleFormat": "High Usage: {{ $labels.mountpoint }}",
          "textFormat": "Disk usage is {{ $value }}% on {{ $labels.mountpoint }}",
          "fillColor": "rgba(255, 165, 0, 0.1)",
          "lineColor": "rgba(255, 165, 0, 1)"
        },
        {
          "name": "Disk Health Issues",
          "datasource": "Prometheus",
          "expr": "node_disk_io_time_seconds_total > 1000",
          "iconColor": "rgba(255, 193, 7, 1)",
          "titleFormat": "Disk Health: {{ $labels.device }}",
          "textFormat": "High I/O time on {{ $labels.device }}",
          "fillColor": "rgba(255, 193, 7, 0.1)",
          "lineColor": "rgba(255, 193, 7, 1)"
        },
        {
          "name": "Storage Errors",
          "datasource": "Prometheus",
          "expr": "rate(node_disk_io_errors_total[5m]) > 0",
          "iconColor": "rgba(255, 0, 0, 1)",
          "titleFormat": "Storage Error: {{ $labels.device }}",
          "textFormat": "I/O errors detected on {{ $labels.device }}",
          "fillColor": "rgba(255, 0, 0, 0.1)",
          "lineColor": "rgba(255, 0, 0, 1)"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Storage Used",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"} - node_filesystem_free_bytes{mountpoint=~\"$mountpoint\"})",
            "legendFormat": "Used Storage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000000000000},
                {"color": "red", "value": 5000000000000}
              ]
            },
            "unit": "bytes",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "description": "Total storage space used across all monitored filesystems"
      },
      {
        "id": 2,
        "title": "Storage Usage Percentage",
        "type": "stat",
        "targets": [
          {
            "expr": "avg((node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"} - node_filesystem_free_bytes{mountpoint=~\"$mountpoint\"}) / node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"} * 100)",
            "legendFormat": "Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "description": "Average storage usage percentage"
      },
      {
        "id": 3,
        "title": "Active Backup Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "backup_jobs_running",
            "legendFormat": "Running Jobs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "description": "Number of currently running backup jobs"
      },
      {
        "id": 4,
        "title": "Failed Backup Jobs (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(backup_job_failures_total[24h])",
            "legendFormat": "Failed Jobs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "description": "Number of failed backup jobs in the last 24 hours"
      },
      {
        "id": 5,
        "title": "Storage Device Status",
        "type": "table",
        "targets": [
          {
            "expr": "node_filesystem_avail_bytes{device=~\"$storage_device\"}",
            "legendFormat": "{{device}} - {{mountpoint}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100000000000},
                {"color": "green", "value": 1000000000000}
              ]
            },
            "unit": "bytes",
            "custom": {
              "displayMode": "color-background",
              "align": "center"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Value"
            }
          ]
        },
        "description": "Status and available space for storage devices"
      },
      {
        "id": 6,
        "title": "Backup Job Status",
        "type": "table",
        "targets": [
          {
            "expr": "backup_job_status{job=~\"$backup_job\"}",
            "legendFormat": "{{job}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "custom": {
              "displayMode": "color-background",
              "align": "center"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Value"
            }
          ]
        },
        "description": "Status of backup jobs (1=success, 0=failed)"
      },
      {
        "id": 7,
        "title": "Storage Usage by Filesystem",
        "type": "timeseries",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"} - node_filesystem_free_bytes{mountpoint=~\"$mountpoint\"}) / node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"} * 100",
            "legendFormat": "{{mountpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "description": "Storage usage percentage trends by filesystem"
      },
      {
        "id": 8,
        "title": "Backup Job Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "backup_job_duration_seconds{job=~\"$backup_job\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3600},
                {"color": "red", "value": 7200}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "description": "Backup job duration trends"
      },
      {
        "id": 9,
        "title": "Disk I/O Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total{device=~\"$storage_device\"}[5m])",
            "legendFormat": "{{device}} (Read)",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_written_bytes_total{device=~\"$storage_device\"}[5m])",
            "legendFormat": "{{device}} (Write)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "description": "Disk I/O activity by device"
      },
      {
        "id": 10,
        "title": "Backup Size Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "backup_job_size_bytes{job=~\"$backup_job\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "bytes",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "description": "Backup size trends over time"
      },
      {
        "id": 11,
        "title": "Disk Health Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_disk_io_time_seconds_total{device=~\"$storage_device\"}",
            "legendFormat": "{{device}} - I/O Time",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_io_errors_total{device=~\"$storage_device\"}[5m])",
            "legendFormat": "{{device}} - Errors",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "description": "Disk health metrics including I/O time and errors"
      },
      {
        "id": 12,
        "title": "Backup Success Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(backup_job_success_total{job=~\"$backup_job\"}[1h])",
            "legendFormat": "{{job}} - Success",
            "refId": "A"
          },
          {
            "expr": "rate(backup_job_failures_total{job=~\"$backup_job\"}[1h])",
            "legendFormat": "{{job}} - Failures",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "description": "Backup success and failure rates"
      },
      {
        "id": 13,
        "title": "Storage Capacity by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "node_filesystem_size_bytes{mountpoint=~\"$mountpoint\"}",
            "legendFormat": "{{mountpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "bytes",
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 40
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "pieType": "pie",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        },
        "description": "Storage capacity distribution by mount point"
      },
      {
        "id": 14,
        "title": "Backup Job Schedule",
        "type": "table",
        "targets": [
          {
            "expr": "backup_job_last_run_timestamp{job=~\"$backup_job\"}",
            "legendFormat": "{{job}} - Last Run",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "custom": {
              "displayMode": "list",
              "align": "left"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 40
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        },
        "description": "Last run timestamps for backup jobs"
      },
      {
        "id": 15,
        "title": "Quick Actions",
        "type": "text",
        "content": "## Quick Actions\n\n- [Backup Management](https://backup.{{ domain }})\n- [Storage Monitoring](https://storage.{{ domain }})\n- [Disk Health Check](https://health.{{ domain }})\n- [Backup Logs](https://logs.{{ domain }})\n\n## Storage Tools\n\n- [Disk Usage Analyzer](https://disk-usage.{{ domain }})\n- [Backup Verification](https://verify.{{ domain }})\n- [Storage Reports](https://reports.{{ domain }})\n\n## Documentation\n\n- [Backup Documentation](https://docs.{{ domain }}/backup)\n- [Storage Guide](https://docs.{{ domain }}/storage)\n- [Recovery Procedures](https://docs.{{ domain }}/recovery)",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 48
        },
        "description": "Quick access to backup and storage management tools"
      }
    ],
    "links": [
      {
        "title": "Backup Management",
        "url": "https://backup.{{ domain }}",
        "targetBlank": true
      },
      {
        "title": "Storage Monitoring",
        "url": "https://storage.{{ domain }}",
        "targetBlank": true
      },
      {
        "title": "Disk Health Check",
        "url": "https://health.{{ domain }}",
        "targetBlank": true
      },
      {
        "title": "Backup Documentation",
        "url": "https://docs.{{ domain }}/backup",
        "targetBlank": true
      }
    ]
  }
} 