{
  "dashboard": {
    "id": null,
    "title": "Security Monitoring",
    "tags": ["security", "monitoring", "crowdsec", "fail2ban", "authentik", "ssl"],
    "style": "{{ grafana_dashboard_theme | default('dark') }}",
    "timezone": "{{ grafana_dashboard_timezone | default('UTC') }}",
    "refresh": "{{ grafana_dashboard_auto_refresh | default('30s') }}",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"],
      "hidden": false,
      "collapse": false
    },
    "templating": {
      "list": [
        {
          "name": "security_service",
          "type": "custom",
          "query": "crowdsec,fail2ban,authentik,traefik,ssl",
          "includeAll": true,
          "multi": true,
          "label": "Security Service",
          "description": "Select security services to monitor",
          "regex": "",
          "sort": 1
        },
        {
          "name": "threat_level",
          "type": "custom",
          "query": "critical,high,medium,low,info",
          "includeAll": true,
          "multi": true,
          "label": "Threat Level",
          "description": "Filter by threat level",
          "regex": "",
          "sort": 1
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=~\"crowdsec|fail2ban|authentik\"}, instance)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "label": "Instance",
          "description": "Select instances to monitor",
          "regex": "",
          "sort": 1
        },
        {
          "name": "attack_type",
          "type": "custom",
          "query": "bruteforce,sqli,xss,ddos,scan,malware",
          "includeAll": true,
          "multi": true,
          "label": "Attack Type",
          "description": "Filter by attack type",
          "regex": "",
          "sort": 1
        },
        {
          "name": "time_range",
          "type": "custom",
          "query": "1h,6h,12h,24h,7d,30d",
          "includeAll": false,
          "multi": false,
          "label": "Time Range",
          "description": "Select time range for metrics",
          "regex": "",
          "sort": 1,
          "current": {
            "selected": true,
            "text": "1h",
            "value": "1h"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Threats",
          "datasource": "Prometheus",
          "expr": "rate(crowdsec_alerts_total[5m]) > 0",
          "iconColor": "rgba(255, 0, 0, 1)",
          "titleFormat": "Security Threat: {{ $labels.threat_level }}",
          "textFormat": "{{ $labels.threat_level }} threat detected: {{ $labels.scenario }}",
          "fillColor": "rgba(255, 0, 0, 0.1)",
          "lineColor": "rgba(255, 0, 0, 1)"
        },
        {
          "name": "Failed Logins",
          "datasource": "Prometheus",
          "expr": "increase(authentik_failed_logins_total[5m]) > 0",
          "iconColor": "rgba(255, 165, 0, 1)",
          "titleFormat": "Failed Login: {{ $labels.username }}",
          "textFormat": "Failed login attempt for {{ $labels.username }} from {{ $labels.source_ip }}",
          "fillColor": "rgba(255, 165, 0, 0.1)",
          "lineColor": "rgba(255, 165, 0, 1)"
        },
        {
          "name": "IP Bans",
          "datasource": "Prometheus",
          "expr": "increase(fail2ban_bans_total[5m]) > 0",
          "iconColor": "rgba(255, 0, 255, 1)",
          "titleFormat": "IP Banned: {{ $labels.ip }}",
          "textFormat": "IP {{ $labels.ip }} banned by {{ $labels.jail }}",
          "fillColor": "rgba(255, 0, 255, 0.1)",
          "lineColor": "rgba(255, 0, 255, 1)"
        },
        {
          "name": "SSL Certificate Expiry",
          "datasource": "Prometheus",
          "expr": "ssl_certificate_expiry_days < 30",
          "iconColor": "rgba(255, 193, 7, 1)",
          "titleFormat": "SSL Expiring: {{ $labels.domain }}",
          "textFormat": "SSL certificate for {{ $labels.domain }} expires in {{ $value }} days",
          "fillColor": "rgba(255, 193, 7, 0.1)",
          "lineColor": "rgba(255, 193, 7, 1)"
        },
        {
          "name": "Traefik Security Events",
          "datasource": "Prometheus",
          "expr": "increase(traefik_requests_total{code=~\"4..|5..\"}[5m]) > 10",
          "iconColor": "rgba(0, 128, 255, 1)",
          "titleFormat": "Traefik Security Event",
          "textFormat": "High rate of error responses from Traefik",
          "fillColor": "rgba(0, 128, 255, 0.1)",
          "lineColor": "rgba(0, 128, 255, 1)"
        }
      ]
    },
    "links": [
      {
        "title": "Homelab Overview",
        "url": "https://grafana.{{ domain }}/d/homelab-overview",
        "icon": "external link",
        "tooltip": "Return to homelab overview"
      },
      {
        "title": "Authentik",
        "url": "https://auth.{{ domain }}",
        "icon": "external link",
        "tooltip": "Access Authentik authentication"
      },
      {
        "title": "CrowdSec",
        "url": "https://crowdsec.{{ domain }}",
        "icon": "external link",
        "tooltip": "Access CrowdSec dashboard"
      },
      {
        "title": "Security Documentation",
        "url": "https://docs.{{ domain }}/security",
        "icon": "external link",
        "tooltip": "View security documentation"
      }
    ],
    "panels": [
      {
        "id": 1,
        "title": "Security Services Health",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(up{job=~\"crowdsec|fail2ban|authentik|traefik\"}) / count(up{job=~\"crowdsec|fail2ban|authentik|traefik\"}) * 100",
            "legendFormat": "Services Health",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "description": "Overall health of security services"
      },
      {
        "id": 2,
        "title": "Active Threats",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(crowdsec_alerts_total)",
            "legendFormat": "Total Threats",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "description": "Total number of active security threats"
      },
      {
        "id": 3,
        "title": "Failed Login Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(authentik_failed_logins_total[5m]))",
            "legendFormat": "Failed Logins/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "reqps",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "description": "Rate of failed login attempts"
      },
      {
        "id": 4,
        "title": "Banned IPs",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(fail2ban_banned_ips_total)",
            "legendFormat": "Banned IPs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "displayMode": "gradient",
              "gradientMode": "scheme"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "description": "Total number of banned IP addresses"
      },
      {
        "id": 5,
        "title": "Security Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"crowdsec|fail2ban|authentik|traefik\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 1,
            "custom": {
              "displayMode": "list",
              "orientation": "vertical"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "description": "Status of all security services"
      },
      {
        "id": 6,
        "title": "SSL Certificate Status",
        "type": "table",
        "targets": [
          {
            "expr": "ssl_certificate_expiry_days",
            "legendFormat": "{{domain}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "d",
            "min": 0,
            "custom": {
              "displayMode": "list",
              "orientation": "horizontal"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "description": "SSL certificate expiry days remaining"
      },
      {
        "id": 7,
        "title": "Threat Activity Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(crowdsec_alerts_total[5m])",
            "legendFormat": "Threats/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "description": "Security threat activity over time"
      },
      {
        "id": 8,
        "title": "Failed Login Attempts Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(authentik_failed_logins_total[5m])",
            "legendFormat": "Failed Logins/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "description": "Failed login attempts over time"
      },
      {
        "id": 9,
        "title": "IP Ban Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(fail2ban_bans_total[5m])",
            "legendFormat": "Bans/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "description": "IP ban activity over time"
      },
      {
        "id": 10,
        "title": "Traefik Security Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(traefik_requests_total{code=~\"4..|5..\"}[5m])",
            "legendFormat": "Error Responses/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "description": "Traefik error responses over time"
      },
      {
        "id": 11,
        "title": "Threat Distribution by Level",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (threat_level) (crowdsec_alerts_total)",
            "legendFormat": "{{threat_level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "description": "Distribution of threats by severity level"
      },
      {
        "id": 12,
        "title": "Top Attack Sources",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (source_ip) (crowdsec_alerts_total))",
            "legendFormat": "{{source_ip}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "description": "Top 10 IP addresses by attack count"
      }
    ]
  }
} 