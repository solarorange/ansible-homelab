SIMPLEAPP_METRICS_ENABLED={{ simpleapp_metrics_enabled | lower }}
SIMPLEAPP_METRICS_PORT={{ simpleapp_metrics_port }}
SIMPLEAPP_HEALTH_CHECK_ENABLED={{ simpleapp_healthcheck_enabled | lower }}
SIMPLEAPP_HEALTH_CHECK_INTERVAL={{ simpleapp_healthcheck_interval }}
SIMPLEAPP_HEALTH_CHECK_TIMEOUT={{ simpleapp_healthcheck_timeout }}
SIMPLEAPP_HEALTH_CHECK_RETRIES={{ simpleapp_healthcheck_retries }}
SIMPLEAPP_HEALTH_CHECK_START_PERIOD={{ simpleapp_healthcheck_start_period }}

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

SIMPLEAPP_LOG_LEVEL={{ simpleapp_log_level }}
SIMPLEAPP_LOG_FORMAT={{ simpleapp_log_format }}
SIMPLEAPP_LOG_RETENTION={{ simpleapp_log_retention }}

# =============================================================================
