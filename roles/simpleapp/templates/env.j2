# =============================================================================
# API CONFIGURATION
# =============================================================================

SIMPLEAPP_API_ENABLED={{ simpleapp_api_enabled | lower }}
SIMPLEAPP_API_VERSION={{ simpleapp_api_version }}
SIMPLEAPP_API_KEY_FILE=/run/secrets/SIMPLEAPP_API_KEY
