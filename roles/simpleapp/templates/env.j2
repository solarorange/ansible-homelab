SIMPLEAPP_NOTIFICATIONS_ENABLED={{ simpleapp_notifications_enabled | lower }}

# Email Configuration
SIMPLEAPP_EMAIL_ENABLED={{ simpleapp_email_enabled | lower }}
SIMPLEAPP_EMAIL_HOST={{ simpleapp_email_host }}
SIMPLEAPP_EMAIL_PORT={{ simpleapp_email_port }}
SIMPLEAPP_EMAIL_USERNAME={{ simpleapp_email_username }}
SIMPLEAPP_EMAIL_PASSWORD_FILE=/run/secrets/SIMPLEAPP_EMAIL_PASSWORD
