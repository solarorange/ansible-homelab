# Simple App Environment Configuration
# Generated by Ansible - Do not edit manually

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Service Configuration
SIMPLEAPP_ENABLED={{ simpleapp_enabled | lower }}
SIMPLEAPP_VERSION={{ simpleapp_version }}
SIMPLEAPP_PORT={{ simpleapp_port }}

# Domain Configuration
SIMPLEAPP_DOMAIN={{ simpleapp_domain }}
SIMPLEAPP_SUBDOMAIN={{ simpleapp_subdomain }}

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

SIMPLEAPP_AUTH_ENABLED={{ simpleapp_auth_enabled | lower }}
SIMPLEAPP_AUTH_METHOD={{ simpleapp_auth_method }}
SIMPLEAPP_ADMIN_EMAIL={{ simpleapp_admin_email }}
SIMPLEAPP_ADMIN_PASSWORD_FILE=/run/secrets/SIMPLEAPP_ADMIN_PASSWORD
SIMPLEAPP_SECRET_KEY_FILE=/run/secrets/SIMPLEAPP_SECRET_KEY

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

SIMPLEAPP_DATABASE_ENABLED={{ simpleapp_database_enabled | lower }}
SIMPLEAPP_DATABASE_TYPE={{ simpleapp_database_type }}
{% if simpleapp_database_type == "postgresql" %}
SIMPLEAPP_DATABASE_HOST={{ simpleapp_database_host }}
SIMPLEAPP_DATABASE_PORT={{ simpleapp_database_port }}
SIMPLEAPP_DATABASE_NAME={{ simpleapp_database_name }}
SIMPLEAPP_DATABASE_USER={{ simpleapp_database_user }}
SIMPLEAPP_DATABASE_PASSWORD_FILE=/run/secrets/SIMPLEAPP_DATABASE_PASSWORD
{% endif %}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

SIMPLEAPP_SECURITY_HEADERS={{ simpleapp_security_headers | lower }}
SIMPLEAPP_RATE_LIMITING={{ simpleapp_rate_limiting | lower }}
SIMPLEAPP_RATE_LIMIT_REQUESTS={{ simpleapp_rate_limit_requests }}
SIMPLEAPP_RATE_LIMIT_WINDOW={{ simpleapp_rate_limit_window }}
SIMPLEAPP_CORS_ENABLED={{ simpleapp_cors_enabled | lower }}
SIMPLEAPP_CROUDSEC_ENABLED={{ simpleapp_crowdsec_enabled | lower }}
SIMPLEAPP_FAIL2BAN_ENABLED={{ simpleapp_fail2ban_enabled | lower }}

# =============================================================================
